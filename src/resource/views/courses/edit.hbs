<div class="mt-4">
    <h3>Modify This Course</h3>

    <form method="post" action="/courses/{{course.id}}?_method=PUT">
        <div class="mb-3">
            <label for="name" class="form-label">Course Name</label>
            <input type="text" class="form-control" value="{{course.name}}" id="name" name="name" va>
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea class="form-control" id="description" name="description">{{course.description}}</textarea>
        </div>
        <div class="mb-3">
            <label for="videoid" class="form-label">Video Id</label>
